<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RC_B_Green"
        android:layout_marginStart="160dp"
        android:layout_marginTop="200dp"
        android:onClick="onConnect"
        android:text="Connect" />

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonConnect"
        android:layout_marginStart="160dp"
        android:layout_marginTop="20dp"
        android:onClick="onScan"
        android:text="SCAN" />

    <ImageView
        android:id="@+id/RC_A_RED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text_A"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/red_small" />

    <ImageView
        android:id="@+id/RC_A_Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text_A"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/green_small" />

    <ImageView
        android:id="@+id/RC_B_RED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text_B"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/RC_A_RED"
        app:srcCompat="@drawable/red_small" />

    <ImageView
        android:id="@+id/RC_B_Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text_B"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/RC_A_RED"
        app:srcCompat="@drawable/green_small" />

    <ImageView
        android:id="@+id/RC_C_RED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text_B"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/RC_B_RED"
        app:srcCompat="@drawable/red_small" />

    <ImageView
        android:id="@+id/RC_C_Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text_B"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/RC_B_RED"
        app:srcCompat="@drawable/green_small" />

    <TextView
        android:id="@+id/Text_Status"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Соединение не установлено"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Text_Name_A"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/Text_Status"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="1П"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Text_Name_B"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/Text_Status"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/Text_Name_A"
        android:text="2П"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Text_Name_C"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/Text_Status"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/Text_Name_B"
        android:text="3П"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Text_A"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/Text_Name_A"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="volt A"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Text_B"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/Text_Name_B"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/Text_A"
        android:text="volt B"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Text_C"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/Text_Name_C"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/Text_B"
        android:text="volt B"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>