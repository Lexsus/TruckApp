<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/editTextLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text_A"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:height="150dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:singleLine="true" />

    <CheckBox
        android:id="@+id/checkBoxChannel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextLog"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Канал 1(2р/р)" />

    <CheckBox
        android:id="@+id/checkBoxChannel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextLog"
        android:layout_toEndOf="@+id/checkBoxChannel1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Канал 2(1р/р)" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBoxChannel1"
        android:layout_marginStart="160dp"
        android:layout_marginTop="20dp"
        android:onClick="onSend"
        android:text="Send" />

    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSend"
        android:layout_marginStart="160dp"
        android:layout_marginTop="20dp"
        android:onClick="onConnect"
        android:text="Connect" />

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonConnect"
        android:layout_marginStart="160dp"
        android:layout_marginTop="20dp"
        android:onClick="onScan"
        android:text="SCAN" />

    <TextView
        android:id="@+id/Text_Status"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Соединение не установлено"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Text_A"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/Text_Status"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:text="---"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerRC"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text_Status"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp" />


</RelativeLayout>